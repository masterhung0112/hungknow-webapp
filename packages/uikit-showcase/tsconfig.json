{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["ES6", "DOM"],
    "target": "es6",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*", "node_modules", "dist"]
}
