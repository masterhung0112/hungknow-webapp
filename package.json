{
  "name": "hungknow-webapp",
  "version": "0.1.4",
  "private": true,
  "proxy": "http://localhost:3080",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "eslint:check": "eslint --ext .js,.jsx,.tsx,.ts . --quiet --cache",
    "eslint:fix": "eslint --ext .js,.jsx,.tsx,.ts . --quiet --fix --cache",
    "dev": "cross-env NODE_ENV='development' node server.js",
    "start:nextbrowser": "lerna run start --scope hk-browser-nextjs --stream",
    "build:browser": "lerna run build --scope hk-browser --include-filtered-dependencies --stream",
    "build:browser:no-deps": "lerna run build --scope hk-browser --stream",
    "dev:build:browser": "lerna run build:dev --scope hk-browser --include-filtered-dependencies --stream",
    "dev-server:browser": "lerna run dev-server --scope hk-browser --stream",
    "build:nextbrowser": "lerna run build --scope hk-browser-nextjs --include-filtered-dependencies --stream",
    "build:nextbrowser:no-deps": "lerna run build --scope hk-browser-nextjs --stream",
    "dev:build:nextbrowser": "lerna run build:dev --scope hk-browser-nextjs --stream",
    "dev-server:nextbrowser": "lerna run dev --scope hk-browser-nextjs --stream",
    "build:redux": "lerna run build --scope hkclient-redux --include-filtered-dependencies --stream",
    "build:redux:no-deps": "lerna run build:dev --scope hkclient-redux --stream",
    "dev:build:redux": "lerna run build:dev --scope hkclient-redux --include-filtered-dependencies --stream",
    "build:chat": "lerna run build --scope hk-chat --include-filtered-dependencies --stream",
    "build:chat:no-deps": "lerna run build --scope hk-chat --stream",
    "build:chat:watch": "lerna run build:watch --scope hk-chat --stream",
    "dev:build:chat": "lerna run build:dev --scope hk-chat --stream",
    "build:babel-plugin-edit-import-extension": "lerna run build --scope babel-plugin-edit-import-extension --stream",
    "build:uikit": "lerna run build --scope @hungknow/{uikit,uikit-showcase} --stream",
    "dev:build:uikit": "lerna run dev:build --scope @hungknow/{uikit,uikit-showcase} --stream",
    "dev:uikit": "lerna run dev --parallel --scope \"@hungknow/{uikit,uikit-showcase}\"",
    "run": "webpack --progress --watch",
    "root-nav:standalone": "lerna run start:standalone --scope @hungknow/root-nav --stream",
    "check-types": "tsc",
    "sdk-build": "cd ./node_modules/hkclient-ts && npm ci && npm run prepare",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "ci": "npm run check-types && npm run eslint:check && npm run test-ci",
    "updatesnapshot": "jest --updateSnapshot",
    "test": "cross-env NODE_ICU_DATA=node_modules/full-icu NODE_OPTIONS='--trace-warnings' TZ=Etc/UTC jest",
    "test:chat": "lerna run test --scope hk-chat --stream --",
    "test:watch": "cross-env NODE_ICU_DATA=node_modules/full-icu TZ=Etc/UTC jest --watch",
    "test-ci": "cross-env NODE_ICU_DATA=node_modules/full-icu TZ=Etc/UTC jest --ci --maxWorkers=8",
    "css-def": "npm-run-all --parallel css-def:component css-def:style css-def:style-2nd",
    "css-def:component": "tsm \"src/components/**/*.scss\" --nameFormat none --aliases.~@blueprintjs/icons/src/icons \"./node_modules/@blueprintjs/icons/src/icons\" --exportType default",
    "css-def:style": "tsm \"src/styles/*/*.scss\" --nameFormat none --aliases.~@blueprintjs/icons/src/icons \"./node_modules/@blueprintjs/icons/src/icons\" --exportType default",
    "css-def:style-2nd": "tsm \"src/styles/*/*/*.scss\" --nameFormat none --aliases.~@blueprintjs/icons/src/icons \"./node_modules/@blueprintjs/icons/src/icons\" --exportType default",
    "git:branch-clean": "git branch -vv | grep ': gone]'|  grep -v \"\\*\" | awk '{ print $1; }' | xargs git branch -D",
    "build:dev:env": "docker-compose -f ./build/docker-compose.dev.yml build",
    "start:dev:env": "docker-compose -f ./build/docker-compose.dev.yml up -d",
    "build:docker-ci": "docker build -f ./build/Dockerfile.ci -t webapp-ci:latest .",
    "task": "node ./tasksfile.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.14.5",
    "@babel/core": "7.14.6",
    "cross-env": "7.0.3",
    "lerna": "^3.22.1",
    "tasksfile": "^5.1.1",
    "shelljs": "^0.8.4",
    "dotenv": "^10.0.0"
  },
  "workspaces": {
    "packages": ["packages/*"]
  }
}
